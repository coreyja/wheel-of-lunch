<div id="cloud" style="width: 550px; height: 350px;"></div>

<script type="text/javascript">
  var tags = [
    <% @tags.each do |tag| %>
      {text: '<%= tag.name %>', weight: <%= tag.frequency %>, link: '<%= tag_path(tag) %>'},
    <% end %>
  ];

  $(function() {
    $('#cloud').empty();
    $('#cloud').jQCloud(tags);
  });
</script>

<table>
  <thead>
    <tr>
      <th>
        tag name
      </th>
      <th>
        tagged restaurants
      </th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td>
          <ul>
            <% tag.restaurants.each do |restaurant| %>
              <li><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
            <% end %>
          </ul>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
